{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pull assembly scripts",
            "type": "shell",
            "command": "python -m backend.tools.pull_scripts",
            "problemMatcher": []
        },
        {
            "label": "Deploy app",
            "type": "shell",
            "command": "gcloud app deploy",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "dependsOn": ["Build app"],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build app",
            "type": "npm",
            "script": "build",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Launch servers",
            "dependsOn": ["Launch frontend", "Launch backend", "Launch db"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch frontend",
            "type": "npm",
            "script": "dev",
            "problemMatcher": [],
            "presentation": {
                "group": "server"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Launch backend",
            "type": "shell",
            "command": "flask",
            "args": [
                "--app",
                "backend.server",
                "run",
                "--debug",
                "--cert",
                "credentials/cert.pem",
                "--key",
                "credentials/key.pem",
                "--port",
                "3000"
            ],
            "presentation": {
                "group": "server"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch db",
            "type": "shell",
            "command": "gcloud emulators firestore start --host-port=127.0.0.1:8080",
            "presentation": {
                "group": "server"
            },
            "problemMatcher": []
        },
        {
            "label": "Clear db",
            "type": "shell",
            "command": "curl -v -X DELETE 'http://127.0.0.1:8080/emulator/v1/projects/robot-manager-123/databases/(default)/documents'",
            "problemMatcher": []
        }
    ]
}
